                            EventType="打开网页" 
                            EventData="https://wtumcbbs.space/mobile/maps/index.html" 
                            ToolTip="查看服务器的卫星图像" />

            <!-- 便捷功能 -->
            <local:MyButton Text="便捷功能" 
                            Margin="5" 
                            Width="180" 
                            Height="30" 
                            HorizontalAlignment="Stretch" 
                            Padding="10,0,10,0" 
                            ColorType="Highlight" 
                            EventType="弹出窗口" 
                            EventData="便捷功能|awa目前还没想好，可以在问题反馈的页面进行建议，谢谢awa" 
                            ToolTip="了解服务器的便利工具" />

